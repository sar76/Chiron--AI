{
  "manifest_version": 3,
  "name": "Step-by-Step Vision Guide",
  "version": "1.0",
  "description": "Capture your screen, send screenshots + instructions to OpenAI, and draw boxes on each step.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "desktopCapture"
  ],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
